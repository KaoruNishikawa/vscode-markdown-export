{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/suite/index.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "npm: pretest",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ],
}
