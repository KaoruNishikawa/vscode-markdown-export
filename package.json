{
    "name": "markdown-export",
    "version": "0.1.0",
    "publisher": "k-nishikawa",
    "engines": {
        "vscode": "^1.75.1"
    },
    "license": "MIT",
    "displayName": "Markdown Export",
    "description": "Export Markdown files in VS Code",
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "markdown-export.to.html",
                "title": "Export markdown to HTML",
                "category": "Markdown Export"
            },
            {
                "command": "markdown-export.to.pdf",
                "title": "Export markdown to PDF",
                "category": "Markdown Export"
            }
        ],
        "configuration": [
            {
                "title": "Markdown Export",
                "properties": {
                    "markdown-export.chrome.path": {
                        "type": "string",
                        "default": null,
                        "description": "Path to Chrome executable. May be `...\\Google\\Chrome\\Application\\chrome.exe` on Windows, `.../Google Chrome.app/Contents/MacOS/Google Chrome` on macOS, `/usr/bin/google-chrome-stable` on Debian."
                    }
                }
            }
        ]
    },
    "activationEvents": [],
    "dependencies": {
        "@types/marked": "^4.0.8",
        "dompurify": "^3.0.1",
        "jsdom": "^21.1.1",
        "marked": "^4.2.12",
        "puppeteer-core": "^19.7.5"
    },
    "devDependencies": {
        "@types/dompurify": "^3.0.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.75.1",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "@vscode/test-electron": "^2.2.3",
        "eslint": "^8.34.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    }
}
